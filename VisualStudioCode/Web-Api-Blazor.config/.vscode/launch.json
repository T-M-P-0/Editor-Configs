{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch and Debug Wasm",
            "type": "blazorwasm",
            "preLaunchTask": "build-wasm",
            "request": "launch",
            "url": "https://localhost:5260",
            "cwd": "${workspaceFolder}/src/Client.StartUp",
            "browser": "edge",
            "suppressMultipleSessionWarning": true,
        },
        {
            "name": "Watch Wasm",
            "type": "coreclr",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/Client.Startup",
            "program": "dotnet",
            "args": [
                "watch",
                "--project",
                ".",
                "--verbose"
            ],
            // "preLaunchTask": "build-wasm" 
        },
        {
            "name": "Attach to Wasm",
            "type": "blazorwasm",
            "request": "attach",
            "cwd": "${workspaceFolder}/src/Client.StartUp",
            "browser": "edge",
            "url": "https://localhost:7035",
        },
        {
            "name": "Launch and Debug API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/src/API/bin/Debug/net7.0/API.dll",
            "cwd": "${workspaceFolder}/src/API",
            "launchBrowser": {
                "enabled": false,
            },
            "allowFastEvaluate": true,
            "enableStepFiltering": true,
            "justMyCode": true,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/API/Views"
            }
        },
        {
            "name": "Watch API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api", // Ensure we don't watch an unbuilt site
            "program": "dotnet",
            "cwd": "${workspaceFolder}/src/API",
            "args": [
                "watch",
                "--verbose" // Let's us confirm browser connects with hot reload capabilities
            ],
            "launchBrowser": {
                "enabled": false
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/API/Views"
            }
        },
        {
            "name": "Attach to API",
            "type": "coreclr",
            "request": "attach",
        },
    ],
    "compounds": [
        {
            "name": "Lauch and Debug API & Watch And Debug WASM",
            "configurations": [
                "Launch and Debug API",
                "Watch Wasm",
                "Attach to Wasm",
            ],
        },
        {
            "name": "Hot Reload and Debug Wasm",
            "configurations": [
                "Watch Wasm",
                "Attach to Wasm"
            ]
        },
        {
            "name": "Hot Reload and Debug API",
            "configurations": [
                "Watch API",
            ]
        }
    ]
}